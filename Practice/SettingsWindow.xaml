<Window x:Class="Practice.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="162.614" Width="205.795">
    <Grid Margin="0,0,0,4">
        <Button x:Name="AddActionButton" Content="Add an action" HorizontalAlignment="Left" Margin="49,18,0,0" VerticalAlignment="Top" Width="102" Click="AddActionClicked"/>
        <Button x:Name="RemoveActionButton" Content="Remove an action" HorizontalAlignment="Left" Margin="49,43,0,0" VerticalAlignment="Top" Width="102" Click="RemoveButtonClick"/>
        <Button x:Name="CloseButton" Content="Accept settings" HorizontalAlignment="Left" Margin="49,68,0,0" VerticalAlignment="Top" Width="102" Click="AcceptSettings"/>
        <Button x:Name="CloseButton_Copy" Content="Decline settings" HorizontalAlignment="Left" Margin="49,93,0,0" VerticalAlignment="Top" Width="102" Click="DeclineSettings"/>

    </Grid>
</Window>
