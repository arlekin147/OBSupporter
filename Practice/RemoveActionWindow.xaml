<Window x:Class="Practice.RemoveActionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice"
        mc:Ignorable="d"
        Title="RemoveActionWindow" Height="110.455" Width="279.432">
    <Grid Margin="0,0,0,2">
        <Button x:Name="Removebutton" Content="Remove" HorizontalAlignment="Left" Margin="56,50,0,0" VerticalAlignment="Top" Width="76" Click="RemoveButtonClick"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="146,50,0,0" VerticalAlignment="Top" Width="74" Click="CancelClick"/>
        <ComboBox Name="ActionsToRemove" Margin="0,10,0,38">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Text}" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

    </Grid>
</Window>
