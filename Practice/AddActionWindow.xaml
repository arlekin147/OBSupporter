<Window x:Class="Practice.AddActionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice"
        mc:Ignorable="d"
        Title="AddAction" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" Height="209.864">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Input a digit of the action's shortcut"/>
        <TextBox x:Name="ShortcutBox" Grid.Row="1" MinWidth="250" Text="Digit"/>

        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,56,0,-41">
            <Button IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="0,0,10,0">OK</Button>
            <Button IsCancel="True" Click="Cancel_Click" MinWidth="60" Content="Cancel"/>
        </WrapPanel>
        <TextBlock Text="Input a text of the action" Margin="0,1,0,14" Grid.Row="2"/>
        <TextBox x:Name="ActionBox" Grid.Row="2" MinWidth="250" Text="Text" Margin="0,22,0,-7"/>

    </Grid>
</Window>